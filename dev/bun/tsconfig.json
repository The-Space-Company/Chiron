{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "Node",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags (disabled by default)
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@/*": ["./src/*"],
			"chiron-sh": ["../../packages/chiron-sh/src"],
			"chiron-sh/adapters/prisma": ["../../packages/chiron-sh/src/adapters/prisma-adapter"],
			"chiron-sh/adapters/drizzle": ["../../packages/chiron-sh/src/adapters/drizzle-adapter"],
			"chiron-sh/plugins/*": ["../../packages/chiron-sh/src/plugins/*"]
		},
		"baseUrl": "."
	}
}
